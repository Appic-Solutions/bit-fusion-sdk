{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "allowJs": true
    },
    "include": ["test/**/*.ts"],
    "exclude": ["node_modules"]
  }